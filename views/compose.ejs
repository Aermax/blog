<%- include('partials/header')  -%> 
<h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label><br>
            <input type="text" autocomplete="off" class="form-control" name="postTitle" id="title"><br>
        </div>
        <div class="mb-3">
            <label for="textBox" class="form-label">Post</label><br>
            <textarea name="postBody" autocomplete="off" class="form-control" id="textBox" cols="20" rows="5"></textarea><br>
        </div>
        <button class="btn btn-primary" type="submit">Publish</button>
    
    </form>    



<%- include('partials/footer')  -%> 
